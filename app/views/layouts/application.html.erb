<!DOCTYPE html>
<html>
  <head>
    <title>Testdevise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if customer_signed_in? %>
      <li>
        <%= link_to "customerログアウト", destroy_customer_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "customer新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "customerログイン", new_customer_session_path %>
      </li>
    <% end %>
    <h3>-------------------------</h3>
    <% if admin_signed_in? %>
      <li>
        <%= link_to "adminログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "admin新規登録", new_admin_registration_path %>
      </li>
      <li>
        <%= link_to "adminログイン", new_admin_session_path %>
      </li>
    <% end %>
    <%= yield %>
  </body>
</html>
